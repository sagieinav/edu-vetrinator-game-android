<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/controls_area_height"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="@dimen/button_alpha_disabled"
        android:background="@color/offwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/wrapper_move_left"
        android:layout_width="@dimen/button_width"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/button_margin_side"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/button_internal_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_arrow"
            android:translationX="@dimen/button_shadow_offset"
            android:translationY="@dimen/button_shadow_offset"
            app:tint="@color/shadow_color"
            app:tintMode="src_in" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_move_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/desc_move_left"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_arrow" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/wrapper_move_right"
        android:layout_width="@dimen/button_width"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/button_margin_side"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/button_internal_padding"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_arrow"
            android:translationX="@dimen/button_shadow_offset_mirrored"
            android:translationY="@dimen/button_shadow_offset"
            app:tint="@color/shadow_color"
            app:tintMode="src_in" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_move_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/desc_move_right"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_arrow" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>