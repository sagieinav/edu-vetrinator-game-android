<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="@dimen/app_header_size"
        android:layout_height="@dimen/app_header_size"
        android:src="@drawable/app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/separator_header"
        android:layout_width="3dp"
        android:layout_height="@dimen/app_header_size"
        android:background="@color/black"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="@id/iv_app_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_app_icon"
        app:layout_constraintStart_toEndOf="@id/iv_app_icon"
        />

        <LinearLayout
            android:id="@+id/container_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_header_separator_margin"
            android:orientation="vertical"
            android:paddingTop="@dimen/app_header_vertical_correction"
            app:layout_constraintBottom_toBottomOf="@id/iv_app_icon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/separator_header"
            app:layout_constraintTop_toTopOf="@id/iv_app_icon"
            >
            app:layout_constraintEnd_toEndOf="parent"

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_george"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel_purl"
                android:includeFontPadding="false"
                android:lineHeight="@dimen/app_title_size"
                android:text="George"
                android:textColor="@color/brown_george"
                android:textSize="@dimen/app_title_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_the"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel_purl"
                android:includeFontPadding="false"
                android:text="The"
                android:textColor="@color/brown_george"
                android:textSize="@dimen/app_title_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_vetrinator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel_purl"
                android:includeFontPadding="false"
                android:text="Vetrinator"
                android:textColor="@color/brown_george"
                android:textSize="@dimen/app_title_size" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
