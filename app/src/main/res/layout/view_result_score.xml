<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_your_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_purl"
        android:text="@string/score_label_with_colon"
        android:textColor="@color/brown_george"
        android:textSize="@dimen/text_size_large" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_s"
        android:fontFamily="@font/pixel_purl"
        android:text="000"
        android:textColor="@color/brown_george"
        android:textSize="@dimen/text_size_score_display"
        android:textStyle="bold" />
</LinearLayout>