<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/hearts_box_margin">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/glass_white"
        app:cardCornerRadius="@dimen/hearts_box_corner_radius"
        app:cardElevation="@dimen/hearts_box_elevation"
        app:strokeColor="@color/offwhite_stroke"
        app:strokeWidth="@dimen/hearts_box_stroke_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/pixel_purl"
            android:text="0"
            android:textColor="@color/brown_george"
            android:textSize="40sp"
            android:includeFontPadding="false" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_boost_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_boost"
        app:layout_constraintTop_toBottomOf="@id/card_score"
        app:layout_constraintStart_toStartOf="@id/card_score"
        android:visibility="invisible"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/glass_white"
        app:cardCornerRadius="@dimen/hearts_box_corner_radius"
        app:cardElevation="@dimen/hearts_box_elevation"
        app:strokeColor="@color/offwhite_stroke"
        app:strokeWidth="@dimen/hearts_box_stroke_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/hearts_box_padding_h"
            android:paddingVertical="@dimen/hearts_box_padding_v">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_heart1"
                android:layout_width="@dimen/heart_icon_size"
                android:layout_height="@dimen/heart_icon_size"
                android:layout_marginHorizontal="@dimen/heart_icon_spacing"
                app:srcCompat="@drawable/ic_heart" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_heart2"
                android:layout_width="@dimen/heart_icon_size"
                android:layout_height="@dimen/heart_icon_size"
                android:layout_marginHorizontal="@dimen/heart_icon_spacing"
                app:srcCompat="@drawable/ic_heart" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_heart3"
                android:layout_width="@dimen/heart_icon_size"
                android:layout_height="@dimen/heart_icon_size"
                android:layout_marginHorizontal="@dimen/heart_icon_spacing"
                app:srcCompat="@drawable/ic_heart" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
